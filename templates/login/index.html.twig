{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData,'security')}} </div>
    {% endif %}
<div class=" flex flex-col justify-center items-center ">
<h1 class="text-2xl font-bold m-4">Connectez-vous</h1>
    <form class=" w-1/3 flex flex-col " action="{{path('app_login')}}" method="post">

        <label class="text-xl" for="username">Email</label>
        <input class="border rounded mb-4" type="text" id="username" name="_username" value="{{last_username}}"/>

        <label class="text-xl" for="password">Mot de passe</label>
        <input class="border mb-4 rounded" type="password" id="password" name="_password"/>
        <button  class=" m-auto border bg-black text-white rounded-xl px-6 p-2 hover:opacity-80" type="submit">Connectez-vous</button>

    </form>
</div>
{% endblock %}
