{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
 {{include("ecommerce/headerlog.html.twig")}}
    
<div class="w-full flex flex-col items-center justify-center m-4">
<h1 class="m-5 text-2xl font-bold">Inscription</h1>
    <div class="w-1/3 ">
        {{ form_start(registrationForm) }}
            <h1 class="text-xl">Email</h1>
            <div class=" mb-5 border rounded">
            {{ form_widget(registrationForm.email) }}
                </div>
            <h1 class="text-xl">Mot de passe</h1>
            <div class=" mb-5 border rounded">
             {{ form_widget(registrationForm.plainPassword, {
                label: 'Password'
                }) }}
            </div>

            <div class=" h-min">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>

            <div class="flex justify-center items-center">
                <button type="submit" class="btn border w-min p-2 rounded-l-lg bg-black hover:opacity-80 text-white">Register</button>
                    {{ form_end(registrationForm) }}
                <a class="border p-2 rounded-r-lg hover:bg-gray-50 " href="{{path('app_login')}}" >Connectez-vous</a>
                </div>

    </div>
</div>
{% endblock %}
